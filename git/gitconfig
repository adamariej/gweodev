; diff rules
[diff "tarbz2"]
	textconv = tar -O -xjf
[diff "targz"]
	textconv = tar -O -xzf
[diff "tarxz"]
	textconv = tar -O -xJf
[diff "pdf"]
	textconv = pdfinfo
[diff "bin"]
	textconv = hexdump -v -C
[diff "zip"]
	textconv = unzip -p

