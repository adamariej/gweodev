{
	"$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
	"blocks": [
		{
			"alignment": "left",
			"segments": [
				{
					"type": "session",
					"style": "diamond",
					"foreground": "#FFBD00",
					"foreground_templates": [
						"{{if .SSHSession}}#BF3030{{end}}"
					],
					"template": "{{ .HostName }}"
				},
				{
					"type": "path",
					"foreground": "cyan",
					"style": "diamond",
					"properties": {
						"style": "powerlevel",
						"mapped_locations": {
						}
					}
				},
				{
					"type": "git",
					"style": "diamond",
					"trailing_diamond": " ",
					"foreground": "green",
					"foreground_templates": [
						"{{ if .Working.Changed}}#BF3030{{ end }}",
						"{{ if .Staging.Changed}}yellow{{end}}"
					],

					"template": "\uf408{{.HEAD}}{{if .BranchStatus }}{{ .BranchStatus }}{{end}}{{ if .Working.Changed }}\ue621\udb81\udd1b{{ .Working.String }}{{ end }}{{ if .Staging.Changed }}\ue621\uf14a{{ .Staging.String }}{{ end }}",
					"properties": {
						"fetch_status": true,
						"fetch_upstream_icon": true,
						"source": "cli",
						"branch_icon": "",
						"untracked_modes" : {
							"*": "no"
						}
					}
				},
				{
					"foreground": "darkGray",
					"style": "diamond",
					"template": "\ue81d{{.Context}}{{if .Namespace}}({{.Namespace}}){{end}}",
					"type": "kubectl"
				},
				{
					"type": "terraform",
					"style": "diamond",
					"foreground": "#ebcc34",
					"template": " \ue8bd{{.WorkspaceName}} "
				}
			],
			"type": "prompt"
		},
		{
			"alignment": "right",
			"segments": [
				{
					"type": "sysinfo",
					"foreground": "#8f43f3",
					"template": " î‰¦{{ round .PhysicalPercentUsed .Precision }}% ",
					"properties": {
						"precision": 0
					},
					"style": "diamond"
				},
				{
					"type": "executiontime",
					"foreground": "#ffffff",
					"leading_diamond": "\u250b",
					"properties": {
						"style": "amarillo",
						"threshold": 1000
					},
					"style": "diamond",
					"template": " {{ .FormattedMs }} "
				},
				{
					"type": "status",
					"style": "diamond",
					"leading_diamond": "\u250b",
					"foreground": "#85C980",
					"foreground_templates": [
						"{{ if .Error }}#e91e63{{ end }}"
					],
					"template": " {{if .Error}}KO{{else}}OK{{end}} ",
					"properties": {
						"always_enabled": true
					}
				},
				{
					"type": "time",
					"style": "diamond",
					"leading_diamond": "\u250b",
					"foreground": "darkGray",
					"properties": {
						"time_format": "15:04:05"
					}
				}
			],
			"type": "prompt"
		},
		{
			"alignment": "left",
			"newline": true,
			"segments": [
				{
					"foreground": "#FFBD00",
					"style": "plain",
					"template": "\u2b9e",
					"type": "text"
				}
			],
			"type": "prompt"
		}
	],
	"final_space": true,
	"version": 3
}
